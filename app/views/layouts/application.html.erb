<!DOCTYPE html>
<html>
  <head>
    <title>TeacherGroupCreator</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <%= link_to "Home", root_path %>
    <% if logged_in? %>
      |
      <%= link_to "Sign Out", session_path(session[:teacher_id]), :method => :delete %>
    <% else %>
      |
      <%= link_to "Sign In", root_path %>
      |
      <%= link_to "Sign Up", root_path %>
    <% end %>

    <%= yield %>
  </body>
</html>
